{% extends 'BaseBack.html.twig' %}

{% block title %}Produit index

{% endblock %}
{% block body %}
    <style>
        .img{
            width: 60px;
            height: 60px;
            background-size: cover;
            display: block;
            border-radius: 100px;
            -webkit-border-radius: 100px;
            -moz-border-radius: 100px;
        }
        th {
            text-align: inherit;
            text-align: -webkit-match-parent;
        }
        th {
            border-color: inherit;
            border-style: solid;
            border-width: 0;
        }
    </style>
    <section class="ftco-section">

    <div class="container">
    <div class="row">
    <section>

        <div class="album py-5 bg-light">
            <div class="container">
                <div class="sidebar-search" >
                    <div class="input-group custom-search-form">
                        <input    type="text" id="search" class="form-control widget_input" placeholder="Chercher..." style="width: 900px;background: white">
                    </div>
                    <br>
                    <!-- /input-group -->
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="#"> <span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level" id="entitiesNav">
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <table class="table">
        <thead>
        <tr style="color:#df5">

            <th >LibelleProduit</th>
            <th>Categorie</th>
            <th>Prix</th>
            <th>DateExpiration</th>
            <th>Quantite</th>
            <th >Description</th>
            <th >Note</th>
            <th >Image</th>
            <th >Total</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>

                <td>{{ produit.libelleProduit }}</td>
                <td>{{ produit.categorie }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.dateExpiration ? produit.dateExpiration|date('Y-m-d') : '' }}</td>
                <td>{{ produit.quantite }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.note }}</td>

                <div>
                    <td> <img  src="{{ asset('img/')}}{{ produit.image }}" alt="" class="img"></td>

                </div>
                <td>{{ produit.quantite *produit.prix  }}</td>
                <td>


                    <button class="btn btn-primary" ><a href="{{ path('app_produit_show', {'idProduit': produit.idProduit}) }}" style="color:white">Afficher</a></button>
                    <button class="btn btn-warning" ><a href="{{ path('app_produit_edit', {'idProduit': produit.idProduit}) }}" style="color:white">Modifier</a></button>

                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <!-- jQuery is necessary -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function() {
            var searchRequest = null;
            $("#search").keyup(function() {
                var minlength = 3;
                var that = this;
                var value = $(this).val(); // elyyktbo fi input 7atito fi var var
                var entitySelector = $("#entitiesNav").html('');
                if (value.length >= minlength ) {
                    if (searchRequest != null)
                        searchRequest.abort();
                    searchRequest = $.ajax({
                        type: "GET",
                        url: "{{ path('ajax_search1') }}",
                        data: {
                            'q' : value
                        },
                        dataType: "text",
                        success: function(msg){
                            //we need to check if the value is the same
                            if (value==$(that).val()) {
                                var result = JSON.parse(msg);
                                $.each(result, function(key, arr) {
                                    $.each(arr, function(id, value) {
                                        if (key == 'produit') {
                                            if (id != 'error') {
                                                x= document.getElementById("container");
                                                entitySelector.append('<div style="display: table;width:70%;padding: 15px"><span style="text-align: center"> marque: '+value[1]+'</span><br/><span style="text-align: center"> serie: '+value[4]+'</span><br/><a href="produit/show.html.twig'+id+'">'+'<img src="/uploads/produit_image/'+value[0]+'" style="width: 15px; height: 150px"/>'+'</a></div>');
                                            } else {
                                                entitySelector.append('<li class="errorLi">'+value+'</li>');
                                            }
                                        }
                                    });
                                });
                            }
                        }
                    });
                }
            });
        });
    </script>


    <table class="table">
    <thead>
    <tr>

   <th> <button class="btn btn-secondary" ><a href="{{ path('app_produit_new') }}" style="color:white">nouveau produit</a></button></th>
    <th><button class="btn btn-info" > <a href="{{ path('app_p_indexpdf') }}"style="color:white">PDF</a></button></th>
    <th><button class="btn btn-danger" ><a href="{{ path('note_stat') }}"style="color:white">Stat</a></button></th>


        <th>{{ knp_pagination_render(produits) }}</th>
    </tr>
    </thead>
    </table>
    </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
{% endblock %}