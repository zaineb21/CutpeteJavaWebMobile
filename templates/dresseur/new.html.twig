                            {{ form_widget(form.specialite, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.specialite, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Email</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Adresse</label>
                            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.address, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Photo</label>
                            {{ form_widget(form.picture, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.picture, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Numero de telephone</label>
                            {{ form_widget(form.num, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.num, {'attr': {'class': 'text-danger'}}) }}
                        </div>


                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                    </div>

                    {{ form_end(form) }}


