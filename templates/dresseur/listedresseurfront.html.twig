
{% extends 'base/base.html.twig ' %}


{% block titre %}
    Dresseur
{% endblock %}




{% block section%}
{% endblock %}



{% block corp%}
















<div class="container rounded bg-white mt-5 mb-5">
    <div class="images-container">

    </div>
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"></div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">

                </div>
                <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                    <thead class="thead-primary">
                    <tr style="color:#df5">


                        <th>Photo  </th>
                        <th>Nom  </th>
                        <th>Prénom  </th>
                        <th>Spécialité  </th>
                        <th>Emplacement</th>
                        <th>Date de mise en service</th>
                        <th>Numero</th>
                        <th colspan="3" style="text-align: center">Actions</th>

                    </tr>
                    {% for dresseur in dresseurs %}
                        <tr style="color: #f5f5dc">

                            <td>{{dresseur.picture }}</td>
                            <td>{{dresseur.nom}}</td>
                            <td>{{dresseur.prenom}}</td>
                            <td>{{dresseur.specialite}}</td>
                            <td>{{dresseur.email}}</td>
                            <td>{{dresseur.address}}</td>
                            <td>{{dresseur.date|date("m/d/Y")}}</td>
                            <td>{{dresseur.num}}</td>
                            <td> <button class="btn btn-primary" ><a href="{{ path('app_dresseur_show', {'id': dresseur.id}) }}" style="color:white">Afficher</a></button></td>

                        </tr>
                    {% endfor %}

                </table>


                </table>






                {%endblock%}


                {% block footer%}

                {%endblock%}

